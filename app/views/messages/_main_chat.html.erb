<div class="chatview_header">
  <div class="current_room_name">
    <%= @room.name%>
  </div>
  <a href="#" class="end_chat_btn">
    チャットを終了する
  </a>
</div>
<div class="chatview_content">
    <%= render partial: 'message', collection: @messages %>
</div>
<div class="chatview_form_block">
    <%= form_with model: [@room, @message], html: {class: "message_form"}, local: true do |f|%>
     <%= f.text_field :content, class: 'message_input', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
      <%= f.submit '送信', class: 'send_btn' %>
    <%end%>
</div>
